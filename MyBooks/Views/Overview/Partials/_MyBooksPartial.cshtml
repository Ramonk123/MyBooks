@model MyBooks.Models.Overview.MyBooksVM;

<div class="card w-100 mt-5 my-books-card shadow-lg">
    <div class="d-flex justify-content-between align-items-center card-header">
        <h3 class="mx-2 mb-0 card-title align-content-center">My books collection</h3>
        <div class="quick-actions align-self-center">
            <a class="btn btn-outline-light align-content-center" href="@Url.Action("Index", "Library")">View All</a>
        </div>
    </div>
    <input type="hidden" value="@Model.LibraryId" id="library-id" class="form form-control"/>
    @if (Model.Books.Count == 0)
    {
        <div class="card-body d-flex flex-column align-items-center mt-2">
            <p class="text-center fs-2">You have no books in your collection.</p>
            <a href="#" class="btn btn-primary btn-lg btn-add-book mt-3">Add First Book</a>
        </div>
    }
    else
    {
        <div class="card-body overflow-auto">
            <div class="list-group">
                @foreach (var book in Model.Books)
                {
                    <div class="list-group-item card-item mb-3 my-book-card">
                        <div class="d-flex flex-row align-items-center">
                            <div class="image-container p-2">
                                <img id="thumbnail" class="rounded" height="140px" width="100px" src="@book.ThumbnailUrl" alt="Book Thumbnail"/>
                            </div>
                            <div class="details ml-3 flex-grow-1">
                                <h5 class="mb-1 book-name">@book.Name</h5>
                                <p class="mb-1 text-muted book-author">By @book.Author</p>
                                <div class="d-flex justify-content-between mt-2">
                                    <p class="text-muted mb-0"><strong>Status:</strong> Unread</p>
                                    <a href="@book.DetailsUrl" class="btn btn-outline-primary">Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

<div id="toast-container" style="position: fixed; top: 20px; right: 20px; z-index: 1050;"></div>

<style>
    .quick-actions {
        display: flex;
        flex-direction: row;
    }
    
    .quick-actions a {
        align-self: center;
    }
    
    .card-header {
        
    }

</style>