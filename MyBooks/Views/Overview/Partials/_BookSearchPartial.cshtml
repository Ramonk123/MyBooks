@model MyBooks.Models.Overview.SearchVM

<div class="container search-container w-100 d-flex justify-content-center align-items-center flex-column mt-5">
    <h2 class="mb-4 text-center">Find Your Next Favorite Book</h2>
    <div class="input-group mb-3 w-75">
        <input type="text" id="searchInput" list="bookTitles" class="form-control"/>
        <datalist id="bookTitles"></datalist>
        <button class="btn btn-primary search-btn" type="submit" onclick="searchBooks()">Search</button>
    </div>
</div>

<style>
    .search-container {
        background-color: #f8f9fa;
        padding: 2rem;
        border-radius: 0.75rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .search-container h2 {
        font-size: 2rem;
        font-weight: bold;
        color: #343a40;
    }

    .form-select {
        max-width: 200px;
        border-radius: 0.25rem 0 0 0.25rem;
    }

    .form-control {
        border-radius: 0;
        transition: box-shadow 0.3s ease;
    }

    .form-control:focus {
        box-shadow: 0 0 8px rgba(0, 123, 255, 0.25);
    }

    .search-btn {
        border-radius: 0 0.25rem 0.25rem 0;
        transition: background-color 0.3s ease;
    }

    .search-btn:hover {
        background-color: #0056b3;
    }

    @@media (max-width: 768px) {
    .input-group {
        flex-direction: column;
        width: 100%;
    }
    }

    .form-select, .form-control, .search-btn {
        border-radius: 0.25rem;
    }
</style>

<script>
    let currentKeyStrokes = 0;
    const maxKeyStrokes = 3;

    function searchBooks() {
        const query = document.getElementById('searchInput').value;

        if (query.trim().length === 0) {
            return;
        }
        window.location.href = '@Url.Action("Index", "Books")?q=' + query;
    }
</script>