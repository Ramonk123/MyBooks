<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - MyBooks</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/MyBooks.styles.css" asp-append-version="true"/>
</head>
<body>

@if (ViewData["HideNavBar"] == null || !(bool)ViewData["HideNavBar"])
{
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light d-flex justify-content-between p-2">
            <a class="navbar-brand" href="/">MyBooks</a>
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item "><a class="nav-link" href="@Url.Action("Index", "Library")">Library</a></li>
                    <li class="nav-item "><a class="nav-link" href="@Url.Action("Logout", "Account")">Logout</a></li>
                </ul>
        </nav>
    </header>
}
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - MyBooks - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>