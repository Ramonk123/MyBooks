@model MyBooks.Models.Book.BookDetailVM

<div class="container mt-5 book-detail-container">
    <div class="row">
        <div class="col-lg-4 text-center">
            @if (!string.IsNullOrEmpty(Model.ThumbnailUrl))
            {
            <img src="@Model.ThumbnailUrl" class="img-fluid rounded book-thumbnail" alt="Book Thumbnail">
            }
            else
            {
            <div class="placeholder-thumbnail">
                <p>No Thumbnail Available</p>
            </div>
            }
        </div>
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">@Model.Title</h2>
                </div>
                <div class="card-body">
                    <h5 class="card-title text-muted">By: @Model.Author</h5>
                    <p class="card-text"><strong>ISBN:</strong> @Model.ISBN</p>
                    <p class="card-text"><strong>Description:</strong></p>
                    <p class="book-description">@Model.Description</p>
                    <div class="actions mt-4">
                        <a href="#" class="btn btn-primary btn-lg">Add to Library</a>
                        <a href="#" class="btn btn-outline-secondary btn-lg ml-2">View Reviews</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .book-detail-container {
        background-color: #f8f9fa;
        padding: 2rem;
        border-radius: 0.5rem;
    }

    .card {
        border-radius: 1rem;
    }

    .book-thumbnail {
        max-height: 400px;
        object-fit: cover;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

    .book-thumbnail:hover {
        transform: scale(1.05);
    }

    .placeholder-thumbnail {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 400px;
        background-color: #e9ecef;
        border-radius: 0.5rem;
        font-size: 1.2rem;
        color: #6c757d;
    }

    .card-header {
        border-top-left-radius: 1rem;
        border-top-right-radius: 1rem;
    }

    .card-body {
        padding: 2rem;
    }

    .card-title {
        font-weight: bold;
        color: #495057;
    }

    .card-text {
        font-size: 1.1rem;
    }

    .book-description {
        font-size: 1rem;
        color: #6c757d;
        line-height: 1.6;
    }

    .actions .btn {
        transition: all 0.3s ease;
    }

    .actions .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .actions .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
    }

    .actions .btn-outline-secondary {
        border-color: #6c757d;
        color: #6c757d;
    }

    .actions .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: #ffffff;
    }

    .actions .btn-lg {
        padding: 0.75rem 1.5rem;
        font-size: 1.2rem;
    }

    .actions .ml-2 {
        margin-left: 0.5rem;
    }
</style>
